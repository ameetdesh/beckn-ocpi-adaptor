{
  "name": "beckn-ocpi-adaptor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node -r dotenv/config src/index.ts",
    "start": "node build/src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && chmod 755 build/src/index.js",
    "test:packages": "npm run test:core && npm run test:cache-redis && npm run test:log-clickhouse && npm run test:server",
    "test:core": "cd packages/core && npm run test:example",
    "test:cache-redis": "cd packages/cache-redis && npm run test:example",
    "test:log-clickhouse": "cd packages/log-clickhouse && npm run test:example",
    "test:server": "cd packages/server && npm run test:example",

    "generate:zod:v1": "node -e \"require('fs').mkdirSync('packages/core/src/types/generated/beckn-v1', { recursive: true });\" && for spec in specs/beckn-schema/beckn-v1/api-specs/*.yaml specs/beckn-schema/beckn-v1/schema-packs/*/*/attributes.yaml; do if [ -f \"$spec\" ]; then echo \"Generating Zod types from $spec\"; openapi-to-zod -i \"$spec\" -o packages/core/src/types/generated/beckn-v1 --fileExt ts; fi; done",
    "generate:zod:v2": "node -e \"require('fs').mkdirSync('packages/core/src/types/generated/beckn-v2/core', { recursive: true });\" && openapi-to-zod -i specs/beckn-schema/protocol_specifications_new/api-specs/beckn-protocol-api.yaml -o packages/core/src/types/generated/beckn-v2/core --fileExt ts",
    "generate:zod:v2:core-schemas": "node -e \"require('fs').mkdirSync('packages/core/src/types/generated/beckn-v2/core-schemas', { recursive: true });\" && openapi-to-zod -i specs/beckn-schema/protocol_specifications_new/schema/core/v2/core.yaml -o packages/core/src/types/generated/beckn-v2/core-schemas --fileExt ts",
    "generate:zod:attr:charging-service": "node -e \"require('fs').mkdirSync('packages/core/src/types/generated/beckn-v2/charging-service', { recursive: true });\" && openapi-to-zod -i specs/beckn-schema/protocol_specifications_new/schema/EvChargingService/v1/attributes.yaml -o packages/core/src/types/generated/beckn-v2/charging-service --fileExt ts",
    "generate:zod:attr:charging-session": "node -e \"require('fs').mkdirSync('packages/core/src/types/generated/beckn-v2/charging-session', { recursive: true });\" && openapi-to-zod -i specs/beckn-schema/protocol_specifications_new/schema/EvChargingSession/v1/attributes.yaml -o packages/core/src/types/generated/beckn-v2/charging-session --fileExt ts",
    "generate:zod:attr:charging-offer": "node -e \"require('fs').mkdirSync('packages/core/src/types/generated/beckn-v2/charging-offer', { recursive: true });\" && openapi-to-zod -i specs/beckn-schema/protocol_specifications_new/schema/EvChargingOffer/v1/attributes.yaml -o packages/core/src/types/generated/beckn-v2/charging-offer --fileExt ts",
    "generate:zod:attr:cpo": "node -e \"require('fs').mkdirSync('packages/core/src/types/generated/beckn-v2/charging-point-operator', { recursive: true });\" && openapi-to-zod -i specs/beckn-schema/protocol_specifications_new/schema/EvChargingPointOperator/v1/attributes.yaml -o packages/core/src/types/generated/beckn-v2/charging-point-operator --fileExt ts",
    "generate:zod:attributes": "npm run generate:zod:attr:charging-service && npm run generate:zod:attr:charging-session && npm run generate:zod:attr:charging-offer && npm run generate:zod:attr:cpo",
    "generate:zod": "npm run generate:zod:v1 && npm run generate:zod:v2 && npm run generate:zod:v2:core-schemas && npm run generate:zod:attributes",

    "publish:core": "cd packages/core && npm run build && npm publish --access public",
    "publish:cache-redis": "cd packages/cache-redis && npm run build && npm publish --access public",
    "publish:log-clickhouse": "cd packages/log-clickhouse && npm run build && npm publish --access public",
    "publish:server": "cd packages/server && npm run build && npm publish --access public",
    "publish:all": "npm run publish:core && npm run publish:cache-redis && npm run publish:log-clickhouse && npm run publish:server"
  },
  "author": "made with ❤️ by Beckn Labs & the community",
  "license": "MIT",
  "dependencies": {
    "@beckn/cache-redis": "file:./packages/cache-redis",
    "@beckn/log-clickhouse": "file:./packages/log-clickhouse",
    "@beckn/ocpi-adaptor-core": "file:./packages/core",
    "@beckn/server": "file:./packages/server",
    "@clickhouse/client": "^0.0.12",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "jsonata": "^2.1.0",
    "redis": "^4.7.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.10",
    "ocpi-types-typescript": "^0.1.0",
    "openapi-to-zod": "^0.0.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
